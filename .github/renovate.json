{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "assignees": ["alixlahuec"],
  "baseBranches": ["beta"],
  "rangeStrategy": "bump",
  "schedule": "every weekend",
  "timezone": "America/Toronto",
  "packageRules": [
	{
		"matchDepTypes": ["action"],
		"enabled": false
	},
	{
		"groupName": "Blueprint",
		"matchPackagePrefixes": [
			"@blueprintjs/"
		],
		"enabled": false
	},
	{
		"groupName": "Jest Core",
		"matchPackageNames": [
			"jest",
			"jest-environment-jsdom",
			"babel-jest"
		],
		"enabled": false
	},
	{
		"groupName": "React",
		"matchPackageNames": [
			"react",
			"react-dom"
		],
		"enabled": false
	},
	{
		"matchPackageNames": [
			"scite-badge"
		],
		"enabled": false
	},
	{
		"groupName": "Storybook Core",
		"matchPackageNames": [
			"@storybook/addon-a11y",
			"@storybook/addon-actions",
			"@storybook/addon-controls",
			"@storybook/addon-essentials",
			"@storybook/addon-interactions",
			"@storybook/addon-links",
			"@storybook/cli",
			"@storybook/react",
			"@storybook/react-webpack5",
			"storybook"
		]
	}
  ]
}

{
    "compilerOptions": {
		"baseUrl": ".",
		"jsx": "react-jsx",
        "module": "es6",
        "target": "ES2021",
		"moduleResolution": "node",
		"paths": {
			"Components/*": ["./src/components/*"],
			"Mocks/*": ["./mocks/*"],
			"Mocks": ["./mocks"],
			"Roam": ["./src/roam.ts"],
			"Styles": ["./styles"],
			"Types/*": ["./src/types/*"]
		},
		// needed for jest-runner-tsc:
		"typeRoots": [
			"./node_modules/@types",
			"./src/types"
		],
        "alwaysStrict": false,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"strictBindCallApply": true,
        "strictNullChecks": true,
        "allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"noEmit": true,
		"resolveJsonModule": true
    },
	"exclude": ["node_modules", "dist"],
    "include": [
        ".storybook/**/*",
		"loader.tsx",
		"mocks/**/*",
		"sandbox.ts",
		"src/**/*",
		"stories/**/*",
		"styles/**/*",
		"tests/**/*"
    ]
}
{
    "compilerOptions": {
		"baseUrl": ".",
		"jsx": "react",
        "module": "es6",
        "target": "es6",
		"moduleResolution": "node",
		"paths": {
			"Components/*": ["./src/components/*"],
			"Mocks/*": ["./mocks/*"],
			"Roam": ["./src/roam.js"],
			"Types/*": ["./src/types/*"]
		},
        "alwaysStrict": false,
		"noImplicitAny": false,
		"skipLibCheck": true,
        "strictNullChecks": true,
        "allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"noEmit": true
    },
	"exclude": ["node_modules", "dist"],
    "include": [
        "src/**/*",
		"loader.js",
		"sandbox.js"
    ]
}
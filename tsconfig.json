{
    "compilerOptions": {
		"baseUrl": ".",
		"jsx": "react-jsx",
        "module": "es6",
        "target": "ES2021",
		"moduleResolution": "node",
		"paths": {
			"Components/*": ["./src/components/*"],
			"Mocks/*": ["./mocks/*"],
			"Mocks": ["./mocks"],
			"Roam": ["./src/roam.ts"],
			"Types/*": ["./src/types/*"]
		},
        "alwaysStrict": false,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"strictBindCallApply": true,
        "strictNullChecks": true,
        "allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"noEmit": true
    },
	"exclude": ["node_modules", "dist"],
    "include": [
        "src/**/*",
		"loader.tsx",
		"sandbox.ts",
		"stories/**/*",
		".storybook/**/*",
		"tests/**/*"
    ]
}